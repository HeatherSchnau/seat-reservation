nav
    width: 100%;
    background-color: #008BCE;

ul.gcnav
    display: inline-block;
    list-style-type: none;
    background-color: #008BCE;
    height: 80px;

li.gcnav 
    float: left;
    font-size: 12px;
    font-family: Arial;
    height: 80px;

li.gcnav a
    display: block;
    color: white;
    text-align: center;
    padding: 14px 14px;
